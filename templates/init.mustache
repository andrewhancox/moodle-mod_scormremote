{{!
    @template mod_scormremote/init

    This is a template contains javascript for resetting the document body data-source.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * datasource - a url which target the href for a error.

    Example context (json):
    {
        "datasource": "https://example.com/mod/scormremote/error.php?error=unauthorized"
    }
}}
/**
 * Initialize iframe which loads a error page.
 *
 * @returns {null}
 */
function init() {
    const datasource = "{{datasource}}";

    var iframe = document.createElement("iframe");
    iframe.setAttribute("id", "error-frame");
    iframe.setAttribute("src", datasource);
    iframe.setAttribute("frameborder", "0");
    iframe.setAttribute("height", "100%");
    iframe.setAttribute("width", "100%");
    document.body.insertBefore(iframe, document.getElementById("wrapper"));
}